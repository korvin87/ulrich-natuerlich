<T3DataStructure>
	<meta>
		<langDisable>1</langDisable>
	</meta>
	<sheets>
		<sDEF>
			<ROOT>
				<TCEforms>
					<sheetTitle>News Indexer Configuration</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<settings.class>
						<TCEforms>
							<label>Indexer Class</label>
							<!-- TODO: breaking change in TYPO 8.7.0 <displayCond>EXT:news:LOADED:TRUE</displayCond>-->
							<config>
								<type>select</type>
								<itemsProcFunc>Abavo\AbavoSearch\TCA\FlexFormHelper->getParamsAsFieldList</itemsProcFunc>
								<parameters type="array">
									<numIndex index="NewsIndexer">Abavo\AbavoSearch\Indexers\NewsIndexer</numIndex>
								</parameters>
							<renderType>selectSingle</renderType></config>
						</TCEforms>
					</settings.class>
					<settings.categories>
						<TCEforms>
							<label>LLL:EXT:lang/locallang_tca.xlf:sys_category.categories</label>
							<!-- TODO: breaking change in TYPO 8.7.0 <displayCond>EXT:news:LOADED:TRUE</displayCond>-->
							<config>
								<type>select</type>
								<foreign_table>sys_category</foreign_table>
								<autosizemax>15</autosizemax>
								<minitems>0</minitems>
								<maxitems>9999</maxitems>
								<renderMode>tree</renderMode>
								<treeConfig>
									<parentField>parent</parentField>
									<appearance>
										<nonSelectableLevels>0</nonSelectableLevels>
										<expandAll>1</expandAll>
										<showHeader>1</showHeader>
										<width>300</width>
									</appearance>
								</treeConfig>
							<renderType>selectTree</renderType></config>
						</TCEforms>
					</settings.categories>
					<settings.language>
						<TCEforms>
							<label>LLL:EXT:lang/locallang_tca.xlf:sys_language</label>
							<config>
								<type>select</type>
								<renderType>selectMultipleSideBySide</renderType>
								<itemsProcFunc>Abavo\AbavoSearch\TCA\FlexFormHelper->getSysLanguages</itemsProcFunc>
								<renderMode>checkbox</renderMode>
								<maxitems>100</maxitems>
							</config>
						</TCEforms>
					</settings.language>
					<settings.pages>
						<TCEforms>
							<label>LLL:EXT:lang/locallang_tca.xlf:storage_pid</label>
							<!-- TODO: breaking change in TYPO 8.7.0 <displayCond>EXT:news:LOADED:TRUE</displayCond>-->
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>pages</allowed>
								<show_thumbs>1</show_thumbs>
								<size>5</size>
								<maxitems>100</maxitems>
								<wizards>
									<suggest>
										<type>suggest</type>
									</suggest>
								</wizards>
							</config>
						</TCEforms>
					</settings.pages>
				</el>
			</ROOT>
		</sDEF>
	</sheets>
</T3DataStructure>
